<%- include('header',{titulo:'Añadir conductores'}); %>

<div class="container">

    <% const existeMensaje = typeof mensaje!== "undefined"%>
    <% const existeidEvento = path%>
    <% console.log(existeidEvento)%>

    <%if(existeMensaje){ %>
    <div class=" <%=clase%>" role="alert">
            <span class="font-weight-bold">
                MENSAJE
            </span> : <%=mensaje%>
    </div>
    <% } %>

    <div class="scroll-tabla">
        <table class="table table-hover animated slideInLeft">
            <thead>
            <tr>
                <th width= "auto">Nombre</th>
                <th width="auto">Apellido</th>
                <th width="auto">Fecha de nacimiento</th>
                <th width="auto">Licencia valida</th>
                <th width="auto">Acciones</th>

            </tr>
            </thead>
            <!-- tr -> table row -->
            <tbody>
            <% arreglo.forEach( (conductor)=> { %>
                <tr>
                    <td><%= conductor.nombre %></td>
                    <td><%= conductor.apellido %></td>
                    <td><%= conductor.fechaDeNacimiento %></td>
                    <td><%= conductor.licenciaValida %></td>
                    <td>

                        <form action="/evento-por-conductor/<%= conductor.idConductor %>" method="POST">
                            <label></label>
                            <button class="btn btn-outline-success btn-block"
                                    type="submit">
                                Añadir
                            </button>
                        </form>
                        <form action="/evento-por-conductor<% existeidEvento %>/:<%= conductor.idConductor %>" method="POST">
                            <button class="btn btn-outline-danger btn-block"
                                    type="submit">
                                Eliminar
                            </button>
                        </form>
                </tr>
            <% }) %>
            </tbody>

        </table>
    </div>

    <div>
        <div class="scroll-tabla">
            <table class="table table-hover animated slideInLeft">
                <!-- tr -> table row -->
                <thead>
                <tr>
                    <!-- th -> table header -->
                    <th width= "auto">Nombre</th>
                    <th width="auto">Apellido</th>

                </tr>
                </thead>
                <!-- tr -> table row -->
                <tbody>
                <% conductores.forEach( (conductor)=> { %>
                    <tr>
                        <td><%= conductor.nombre %></td>
                        <td><%= conductor.apellido %></td>
                    </tr>
                <% }) %>
                </tbody>

            </table>
        </div>
    </div>

</div>


<%- include('librerias.ejs');%>
<%- include('footer'); %>