
<%- include('header',{titulo:'Evento'}); %>

<div class="container">

    <% const existeNombreEvento = typeof nombreEvento!== "undefined"%>

    <%if(existeNombreEvento){ %>
        <p class="font-weight-bold">
            <%=nombreEvento%>
        </p>  
    <% } %>


    
    
    <div class="row">
        <% arreglo.forEach( (conductor)=> { %>
            <div class="col-md-2">
                <thead>
                    <tr>
                        <th><%= conductor.nombre %></th>                                                            
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= conductor.apellido %></td>
                        <td><%= conductor.fechaDeNacimiento %></td>
                        <td><%= conductor.licenciaValida %></td>    
                    </tr>                            
                </tbody>
            </div>

        <% }) %>
    </div>

</div>

<%- include('librerias.ejs');%>

<%- include('footer');%>